generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PROMPTS")
}

model Prompt {
  id              String    @id @default(uuid())
  account_id      String    // ID da conta do cliente
  prompt          String    // Texto original do prompt
  created_at      DateTime  @default(now())
  
  // Seções da resposta
  analysis        String?   @db.Text   // Seção "ANÁLISE"
  prompt_created  String?   @db.Text   // Seção "Parte do prompt que vai ser criada ou alterada"
  prompt_removed  String?   @db.Text   // Seção "Parte do prompt que foi removida do prompt original"
  prompt_complete String?   @db.Text   // Seção "Prompt completo atualizado com a correção"
  quality_checks  Json?     // Lista de verificações do "Checklist de Qualidade"
  
  @@map("prompts")
}